<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:paddingVertical="4dp">

    <ImageButton
        android:id="@+id/image_categories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/primary_gradient"
        android:clickable="false"
        android:contentDescription="@string/desc_home_multiplayer_image"
        android:focusable="false"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/name_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparentLightBlue"
        android:gravity="center"
        android:text="Mode Name"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:fontFamily="@font/rex_bold" />

</RelativeLayout>